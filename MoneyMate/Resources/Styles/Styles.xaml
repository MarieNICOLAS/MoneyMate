<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- TYPOGRAPHIE -->
    <Style x:Key="Title" TargetType="Label">
        <Setter Property="FontSize" Value="26" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="Subtitle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <Style x:Key="Body" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <!-- LAYOUT -->
    <Style x:Key="MainContainer" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="20" />
        <Setter Property="Spacing" Value="15" />
    </Style>

    <!-- INPUT -->
    <Style x:Key="InputWrapper" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource BorderLight}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Opacity="0.08" Offset="0,2" Radius="4" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style pour Entry interne -->
    <Style x:Key="Input" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- BUTTON -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Button" x:Key="DangerButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- CARDS -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="14" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black" Opacity="0.15" Offset="0,4" Radius="10" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- MESSAGE UX -->
    <Style x:Key="MessageSuccess" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Success}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="MessageError" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Error}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

</ResourceDictionary>
