<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🧱 Container principal -->
    <Style x:Key="MainContainer" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="20,40,20,20"/>
        <Setter Property="Spacing" Value="20"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
    </Style>

    <!-- 🧭 Header (non connecté) -->
    <Style x:Key="HeaderGuest" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="RowDefinitions" Value="Auto" />
        <Setter Property="ColumnDefinitions" Value="Auto,*,Auto" />
    </Style>

    <!-- 🧭 Header (connecté) -->
    <Style x:Key="HeaderUser" TargetType="Grid" BasedOn="{StaticResource HeaderGuest}">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
    </Style>

    <!-- ⚓ Footer -->
    <Style x:Key="FooterStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!-- 🔘 Bouton principal -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <!-- Base -->
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Padding" Value="16,10" />
        <!-- 🌫️ Ombre par défaut (équivalent à Border.Shadow) -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#00000040"
                    Offset="0,4"
                    Radius="25"
                    Opacity="0.35" />
            </Setter.Value>
        </Setter>

        <!-- États visuels -->
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">

                    <!-- Normal -->
                    <VisualState x:Name="Normal" />

                    <!-- Survol -->
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Brush="#00000040"
                                        Offset="0,1"
                                        Radius="12"
                                        Opacity="0.15" />
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Appuyé -->
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                            <Setter Property="Opacity" Value="0.9" />
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Brush="#00000033"
                                        Offset="0,3"
                                        Radius="6"
                                        Opacity="0.3" />
                                </Setter.Value>
                            </Setter>

                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>


    <!-- 🔲 Bouton secondaire -->
    <Style x:Key="OutlineButton" TargetType="Button">
        <!-- Base -->
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Padding" Value="16,10" />
        <!-- 🌫️ Ombre par défaut (équivalent à Border.Shadow) -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#00000040"
                    Offset="0,4"
                    Radius="10"
                    Opacity="0.45" />
            </Setter.Value>
        </Setter>

        <!-- États visuels -->
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">

                    <!-- Normal -->
                    <VisualState x:Name="Normal" />

                    <!-- Survol -->
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Brush="#00005000"
                                        Offset="0,6"
                                        Radius="12"
                                        Opacity="0.5" />
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Appuyé -->
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                            <Setter Property="Opacity" Value="0.9" />
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Brush="#00000020"
                                        Offset="0,2"
                                        Radius="6"
                                        Opacity="0.2" />
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

   
    <!-- 🏷️ Labels -->
    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Secondary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="4,8,0,0" />
    </Style>


    <!-- 🧩 Bordure de champ d’entrée (air form) -->
    <Style x:Key="InputContainer" TargetType="Border">
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="20" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#00000030"
                    Offset="0,3"
                    Radius="8"
                    Opacity="0.25" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 🧾 Entrée intérieure -->
    <Style x:Key="EntryForm" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Secondary}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>






</ResourceDictionary>
