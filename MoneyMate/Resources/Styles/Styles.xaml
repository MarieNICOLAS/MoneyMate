<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🧱 Container principal -->
    <Style x:Key="MainContainer" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="20,40,20,20"/>
        <Setter Property="Spacing" Value="20"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
    </Style>

    <!-- 🧭 Header (non connecté) -->
    <Style x:Key="HeaderGuest" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="RowDefinitions" Value="Auto" />
        <Setter Property="ColumnDefinitions" Value="Auto,*,Auto" />
    </Style>

    <!-- 🧭 Header (connecté) -->
    <Style x:Key="HeaderUser" TargetType="Grid" BasedOn="{StaticResource HeaderGuest}">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
    </Style>

    <!-- ⚓ Footer -->
    <Style x:Key="FooterStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!-- 🔘 Bouton principal -->
    <Style x:Key="PrimaryButton" TargetType="Button">
            <!-- ... -->
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">

                        <!-- Normal -->
                        <VisualState x:Name="Normal" />

                        <!-- Survol -->
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
                                <Setter Property="TextColor" Value="{StaticResource TextLight}" />
                                <Setter Property="Shadow">
                                    <Setter.Value>
                                        <Shadow Brush="#00000025" Offset="0,4" Radius="10" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </VisualState.Setters>
                        </VisualState>

                        <!-- Appuyé -->
                        <VisualState x:Name="PressedPrimary">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                                <Setter Property="Shadow">
                                    <Setter.Value>
                                        <Shadow Brush="#00000040" Offset="0,1" Radius="4" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </VisualState.Setters>
                        </VisualState>

                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>

    <!-- 🔲 Bouton secondaire -->
    <Style x:Key="OutlineButton" TargetType="Button">
            <!-- ... -->
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">

                        <!-- Normal -->
                        <VisualState x:Name="Normal" />

                        <!-- Survol -->
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
                                <Setter Property="TextColor" Value="{StaticResource TextLight}" />
                                <Setter Property="BorderColor" Value="{StaticResource PrimaryLight}" />
                            </VisualState.Setters>
                        </VisualState>

                        <!-- Appuyé -->
                        <VisualState x:Name="PressedOutline">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                <Setter Property="TextColor" Value="{StaticResource TextLight}" />
                                <Setter Property="BorderColor" Value="{StaticResource Primary}" />
                            </VisualState.Setters>
                        </VisualState>

                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>

    <!-- 🧾 Entrées formulaire -->
    <Style x:Key="EntryForm" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Secondary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="45" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!-- 🏷️ Labels -->
    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- 🧩 Bordure d’entrée -->
    <Style x:Key="InputBorder" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Secondary}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Background" Value="{StaticResource White}" />
    </Style>

</ResourceDictionary>
