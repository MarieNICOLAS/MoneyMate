<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🧱 Container principal -->
    <Style x:Key="MainContainer" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="20,40,20,20"/>
        <Setter Property="Spacing" Value="20"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
    </Style>

    <!-- 🧭 Header (non connecté) -->
    <Style x:Key="HeaderGuest" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="RowDefinitions" Value="Auto" />
        <Setter Property="ColumnDefinitions" Value="Auto,*,Auto" />
    </Style>

    <!-- 🧭 Header (connecté) -->
    <Style x:Key="HeaderUser" TargetType="Grid" BasedOn="{StaticResource HeaderGuest}">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
    </Style>

    <!-- ⚓ Footer (invité & user) -->
    <Style x:Key="FooterStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!-- 🔘 Boutons -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="Shadow" Value="5,5,10,Black" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="14,10"/>
    </Style>

    <!-- 🧾 Entrées formulaire -->
    <Style x:Key="EntryForm" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Secondary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="45" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!-- 🏷️ Labels -->
    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="InputBorder" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Secondary}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Background" Value="{StaticResource White}" />
    </Style>

</ResourceDictionary>
