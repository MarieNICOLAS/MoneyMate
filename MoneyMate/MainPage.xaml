<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MoneyMate.Components"
             x:Class="MoneyMate.MainPage"
             BackgroundColor="{StaticResource BackgroundLight}">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HEADER -->
        <VerticalStackLayout Grid.Row="0" Padding="20" HorizontalOptions="Center">
            <Image Source="money_mate_icon.png" WidthRequest="70" HeightRequest="70" />
            <Label Text="MoneyMate"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextDark}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- CONTENU CENTRAL -->
        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="20">

            <Button Text="Se connecter"
                    Clicked="OnLoginClicked"
                    Style="{StaticResource PrimaryButton}" />

            <Button Text="S'inscrire"
                    Clicked="OnSignupClicked"
                    Style="{StaticResource OutlineButton}" />
        </VerticalStackLayout>

        <!-- FOOTER -->
        <Label Grid.Row="2"
               Text="© 2025 MoneyMate - All rights reserved"
               FontSize="12"
               HorizontalOptions="Center"
               VerticalOptions="End"
               TextColor="{StaticResource Secondary}" />
    </Grid>
</ContentPage>
