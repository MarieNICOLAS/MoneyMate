<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MoneyMate.Components.Layout"
             x:Class="MoneyMate.MainPage"
             BackgroundColor="{StaticResource BackgroundLight}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="0,0,0,10">

        <!-- HEADER -->
        <components:Header Grid.Row="0" />

        <!-- CONTENU CENTRAL -->
        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="25">

            <Image Source="money_mate_icon.png"
                   WidthRequest="90"
                   HeightRequest="90"
                   Margin="0,20,0,10" />

            <Label Text="MoneyMate"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextDark}"
                   HorizontalOptions="Center" />

            <VerticalStackLayout Spacing="15">
                <Button Text="Se connecter"
                        Clicked="OnLoginClicked"
                        Style="{StaticResource PrimaryButton}" />

                <Button Text="S'inscrire"
                        Clicked="OnSignupClicked"
                        Style="{StaticResource OutlineButton}" />
            </VerticalStackLayout>
        </VerticalStackLayout>

        <!-- FOOTER -->
        <components:Footer Grid.Row="2"/>
    </Grid>
</ContentPage>
