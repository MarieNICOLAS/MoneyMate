<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMate.MainPage"
             Title="Money Mate | Accueil ">

    <ScrollView>
        <VerticalStackLayout Style="{StaticResource MainContainer}">

            <Image Source="logo.png" HeightRequest="120" HorizontalOptions="Center"/>

            <Button Text="Login" Style="{StaticResource PrimaryButton}" Clicked="OnLoginClicked" />
            <Button Text="Signup" Style="{StaticResource OutlineButton}" Clicked="OnSignupClicked" />

            <Label Text="MoneyMate © 2025. All rights reserved."
                   FontSize="12"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Secondary}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>