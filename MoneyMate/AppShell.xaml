    <ShellContent
        Title="Inscription"
        ContentTemplate="{DataTemplate views:SignupPage}"
        Route="SignupPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
    Title="Menu"
