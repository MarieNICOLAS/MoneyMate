<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMate.Views.AddCategoryPage"
             Title="AddCategoryPage">
    <VerticalStackLayout Margin="10">
        <Label 
         Text="Ajouter une Categorie"
         VerticalOptions="Center" 
         HorizontalOptions="Start" />

        <Label 
         Text="Nom"
         VerticalOptions="Center" 
         HorizontalOptions="Start" />

        <Entry x:Name="NomCategory"
        Placeholder="Course"/>

        <Label 
         Text="Price"
         VerticalOptions="Center" 
         HorizontalOptions="Start" />

        <Entry x:Name="CouleurCategory"
         Placeholder="red"
         Keyboard="Text" />

        <Label 
         Text="Limite pour l'alerte"
         VerticalOptions="Center" 
         HorizontalOptions="Start" />

        <Entry x:Name="LimitAlertCategory"
         Placeholder="700"
         Keyboard="Numeric" />

        <Button Text="Ajouter" 
        BackgroundColor="#EB9362"
        CornerRadius="10"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>