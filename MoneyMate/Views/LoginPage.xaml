<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoneyMate.ViewModels"
             xmlns:components="clr-namespace:MoneyMate.Components"
             x:Class="MoneyMate.Views.LoginPage"
             Title="Connexion">

    <ContentPage.BindingContext>
        <viewmodel:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto" Padding="0">

        <!-- ðŸ§­ Header -->
        <components:Header Grid.Row="0" />

        <!-- ðŸ§¾ Contenu principal -->
        <VerticalStackLayout Grid.Row="1"
                             Padding="30"
                             Spacing="15"
                             VerticalOptions="CenterAndExpand">

            <Label Text="Connexion"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- âœ‰ï¸ Email -->
            <Label Text="Email" Style="{StaticResource FormLabel}" />
            <Border Style="{StaticResource InputContainer}">
                <Entry Placeholder="Adresse e-mail"
                       Keyboard="Email"
                       Text="{Binding Email}"
                       Style="{StaticResource EntryForm}" />
            </Border>

            <!-- ðŸ”‘ Mot de passe -->
            <Label Text="Mot de passe" Style="{StaticResource FormLabel}" />
            <Border Style="{StaticResource InputContainer}">
                <Entry Placeholder="Mot de passe"
                       IsPassword="True"
                       Text="{Binding Password}"
                       Style="{StaticResource EntryForm}" />
            </Border>

            <!-- ðŸ§  Souvenir -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="4"
                                   Margin="0,10,0,10">
                <CheckBox IsChecked="{Binding RememberMe}"
                          VerticalOptions="Center"
                          Color="{StaticResource Primary}" />
                <Label Text="Se souvenir de moi"
                       FontSize="14"
                       TextColor="{StaticResource TextDark}"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- ðŸ”˜ Connexion -->
            <Button Text="Se connecter"
                    Command="{Binding LoginCommand}"
                    Style="{StaticResource PrimaryButton}" />

            <!-- ðŸ’¬ Message erreur -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontSize="13"
                   HorizontalOptions="Center" />

            <!-- ðŸ”— Lien vers inscription -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Margin="0,15,0,0">
                <Label Text="Pas encore de compte ? "
                       TextColor="{StaticResource TextDark}"
                       FontSize="14" />
                <Label Text="Sâ€™inscrire"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold"
                       FontSize="14"
                       InputTransparent="False"
                       IsEnabled="True">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                               Path=BindingContext.GoToSignupCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <!-- â†©ï¸ Retour -->
            <Button Text="â† Retour"
                    Command="{Binding OnBackClickedCommand}"
                    Style="{StaticResource OutlineButton}" />

        </VerticalStackLayout>

        <!-- âš“ Footer -->
        <components:Footer Grid.Row="2" />

    </Grid>
</ContentPage>
