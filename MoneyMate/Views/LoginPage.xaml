<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoneyMate.ViewModels"
             x:Class="MoneyMate.Views.LoginPage"
             Title="Connexion">
    <ContentPage.BindingContext>
        <viewmodel:LoginViewModel />
    </ContentPage.BindingContext>


    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="CenterAndExpand">
        <Label Text="Connexion" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Mot de passe" Text="{Binding Password}" IsPassword="True" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
            <CheckBox IsChecked="{Binding RememberMe}" />
            <Label Text="Se souvenir de moi" FontSize="14" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Button Text="Se connecter" Command="{Binding LoginCommand}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" HorizontalOptions="Center" />

        <Button Text="â† Retour" Clicked="OnBackClicked" Style="{StaticResource OutlineButton}" />
    </VerticalStackLayout>

</ContentPage>
