<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="MoneyMate.Views.EditBudgetPage"
             Title="EditBudgetPage">
    <VerticalStackLayout Style="{StaticResource MainContainer}" Spacing="20">

        <Label 
            Text="Modifier le budget"
            FontSize="24"
            HorizontalOptions="Center"
            TextColor="{StaticResource Primary}" />

        <!-- Montant total -->
        <Label Text="Montant total (€)"
               Style="{StaticResource FormLabel}" />
        <Entry x:Name="TotalAmountEntry"
               Placeholder="Ex: 2000"
               Keyboard="Numeric"
               Style="{StaticResource EntryForm}"
               Text="{Binding TotalAmount}" />

        <!-- Date (mois et année) -->
        <Label Text="Mois du budget"
               Style="{StaticResource FormLabel}" />
        <DatePicker 
            Date="{Binding SelectedDate, Mode=TwoWay}"
            MaximumDate="{x:Static sys:DateTime.Now}"
            Format="MM/yyyy"
            HorizontalOptions="FillAndExpand" />

        <!-- Boutons -->
        <Grid ColumnDefinitions="*,*,*"
              RowDefinitions="Auto"
              ColumnSpacing="10"
              Padding="20">

            <Button Grid.Column="0"
                    Text="Valider"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding UpdateBudgetCommand}" />

            <Button Grid.Column="1"
                    Text="Supprimer"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding DeleteBudgetCommand}" />

            <Button Grid.Column="2"
                    Text="Annuler"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding CancelCommand}" />

        </Grid>

    </VerticalStackLayout>
</ContentPage>