<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:MoneyMate.ViewModels.AuthViewModel"
    xmlns:components="clr-namespace:MoneyMate.Components"
    xmlns:behaviors="clr-namespace:MoneyMate.Behaviors"
    x:Class="MoneyMate.Views.SignupPage"
    x:FieldModifier="public"
    Title="Inscription">

    <ContentPage.BindingContext>
        <viewmodel:SignupViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto">

            <!-- HEADER -->
            <components:Header Grid.Row="0" />

            <!-- CONTENU -->
            <VerticalStackLayout Grid.Row="1"
                                 Padding="30"
                                 Spacing="15">

                <Label Text="Inscription"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center" />

                <!-- NOM -->
                <Label Text="Nom complet" Style="{StaticResource FormLabel}" />
                <Border Style="{StaticResource InputContainer}">
                    <Entry Placeholder="Pseudo"
                           Text="{Binding Name}"
                           Style="{StaticResource EntryForm}" />
                </Border>

                <!-- EMAIL -->
                <Label Text="Email" Style="{StaticResource FormLabel}" />
                <Border Style="{StaticResource InputContainer}">
                    <Entry Placeholder="Adresse e-mail"
                           Keyboard="Email"
                           Text="{Binding Email}"
                           Style="{StaticResource EntryForm}">
                        <Entry.Behaviors>
                            <behaviors:EmailValidationBehavior />
                        </Entry.Behaviors>
                    </Entry>
                </Border>

                <!-- PASSWORD -->
                <Label Text="Mot de passe" Style="{StaticResource FormLabel}" />

                <Grid ColumnDefinitions="*,Auto">

                    <Entry x:Name="PasswordEntry"
                           Placeholder="Mot de passe"
                           IsPassword="True"
                           Text="{Binding Password}"
                           Style="{StaticResource EntryForm}">

                        <Entry.Behaviors>

                            <!-- FORCE MOT DE PASSE -->
                            <behaviors:PasswordStrengthIndicatorBehavior 
                                StrengthBar="{x:Reference SignupStrengthBar}"/>

                            <!-- CRITÈRES MOT DE PASSE -->
                            <behaviors:PasswordRequirementsBehavior 
                                RequirementLabel="{x:Reference SignupRequirementLabel}"/>

                            <!-- VISIBILITÉ MOT DE PASSE -->
                            <behaviors:PasswordVisibilityBehavior 
                                ToggleButton="{x:Reference EyeBtn}" />

                        </Entry.Behaviors>

                    </Entry>

                    <!-- OEIL -->
                    <ImageButton x:Name="EyeBtn"
                                 Grid.Column="1"
                                 Source="open_eye_icon.png"
                                 HeightRequest="28"
                                 WidthRequest="28"
                                 BackgroundColor="Transparent"
                                 Padding="0"
                                 Margin="5,0"/>
                </Grid>

                <!-- CRITÈRES -->
                <Label x:Name="SignupRequirementLabel"
                       TextColor="Red"
                       FontSize="12" />

                <!-- BARRE FORCE -->
                <ProgressBar x:Name="SignupStrengthBar"
                             HeightRequest="8"
                             Progress="0"
                             BackgroundColor="#EEEEEE"
                             ProgressColor="Red" />

                <!-- MESSAGE -->
                <Label Text="{Binding Message}"
                       TextColor="{Binding MessageColor}"
                       HorizontalOptions="Center"
                       FontSize="13" />

                <!-- BOUTONS -->
                <Button Text="S'inscrire"
                        Command="{Binding SignupCommand}"
                        Style="{StaticResource PrimaryButton}" />

                <Button Text="← Retour"
                        Command="{Binding OnBackClickedCommand}"
                        Style="{StaticResource OutlineButton}" />

                <!-- LIEN LOGIN -->
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Déjà un compte ? " />
                    <Label Text="Se connecter"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToLoginCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

            </VerticalStackLayout>

            <components:Footer Grid.Row="2" />

        </Grid>
    </ScrollView>
</ContentPage>
