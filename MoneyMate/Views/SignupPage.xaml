<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoneyMate.ViewModels"
             xmlns:components="clr-namespace:MoneyMate.Components"
             x:Class="MoneyMate.Views.SignupPage"
             Title="Inscription">

    <!-- ðŸ”— Lien vers le ViewModel -->
    <ContentPage.BindingContext>
        <viewmodel:SignupViewModel />
    </ContentPage.BindingContext>

    <!-- âœ… Structure globale -->
    <Grid RowDefinitions="Auto,*,Auto" Padding="0">

        <!-- ðŸ§­ Header -->
        <components:Header Grid.Row="0" />

        <!-- ðŸ§¾ Contenu principal -->
        <VerticalStackLayout Grid.Row="1"
                             Padding="30"
                             Spacing="15"
                             VerticalOptions="CenterAndExpand">

            <Label Text="Inscription"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- ðŸ‘¤ Nom complet -->
            <Label Text="Nom complet" Style="{StaticResource FormLabel}" />
            <Border Style="{StaticResource InputContainer}">
                <Entry Placeholder="Nom complet"
                       Text="{Binding Name}"
                       Style="{StaticResource EntryForm}" />
            </Border>

            <!-- âœ‰ï¸ Email -->
            <Label Text="Email" Style="{StaticResource FormLabel}" />
            <Border Style="{StaticResource InputContainer}">
                <Entry Placeholder="Adresse e-mail"
                       Keyboard="Email"
                       Text="{Binding Email}"
                       Style="{StaticResource EntryForm}" />
            </Border>

            <!-- ðŸ”‘ Mot de passe -->
            <Label Text="Mot de passe" Style="{StaticResource FormLabel}" />
            <Border Style="{StaticResource InputContainer}">
                <Entry Placeholder="Mot de passe"
                       IsPassword="True"
                       Text="{Binding Password}"
                       Style="{StaticResource EntryForm}" />
            </Border>

            <!-- ðŸ’¬ Message feedback -->
            <Label Text="{Binding Message}"
                   TextColor="{Binding MessageColor}"
                   FontSize="13"
                   HorizontalOptions="Center" />

            <!-- ðŸ”˜ Bouton inscription -->
            <Button Text="S'inscrire"
                    Command="{Binding SignupCommand}"
                    Style="{StaticResource PrimaryButton}" />

            <!-- â†©ï¸ Retour -->
            <Button Text="â† Retour"
                    Command="{Binding OnBackClickedCommand}"
                    Style="{StaticResource OutlineButton}" />

            <!-- ðŸ”— Lien vers Connexion -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Margin="0,15,0,0">
                <Label Text="DÃ©jÃ  un compte ? "
                       TextColor="{StaticResource TextDark}"
                       FontSize="14" />
                <Label Text="Se connecter"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold"
                       FontSize="14"
                       InputTransparent="False"
                       IsEnabled="True">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                               Path=BindingContext.GoToLoginCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- âš“ Footer -->
        <components:Footer Grid.Row="2" />

    </Grid>
</ContentPage>
