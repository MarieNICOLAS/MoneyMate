<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMate.Components.HeaderAuthenticated"
             BackgroundColor="{StaticResource PrimaryLight}"
             HeightRequest="50"
             HorizontalOptions="Fill"
             Margin="0,10,0,10">

    <!-- ðŸ©µ Conteneur principal avec ombre douce -->
    <Border
        BackgroundColor="{StaticResource PrimaryLight}"
        HeightRequest="50"
        Padding="0"
        StrokeThickness="0">
        <Border.Shadow>
            <Shadow Brush="Black"
                    Offset="0,4"
                    Radius="6"
                    Opacity="0.3" />
        </Border.Shadow>

        <Grid RowDefinitions="Auto,Auto">

            <!-- ðŸ§­ BARRE PRINCIPALE -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="Auto,*,Auto,Auto"
                  Padding="20,10"
                  VerticalOptions="Center"
                  HorizontalOptions="Fill">

                <!-- ðŸª™ Logo + Nom -->
                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                    <Image Source="money_mate_icon.png"
                           WidthRequest="28"
                           HeightRequest="28"
                           VerticalOptions="Center" />
                    <Label Text="MoneyMate"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="{StaticResource TextLight}"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- ðŸ”” Notifications -->
                <ImageButton Grid.Column="2"
                             Source="alarm_on_icon.png"
                             BackgroundColor="{StaticResource BackgroundLight}"
                             CornerRadius="6"
                             WidthRequest="28"
                             HeightRequest="28"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Command="{Binding GoNotificationsCommand}" />

                <!-- ðŸšª DÃ©connexion -->
                <ImageButton Grid.Column="3"
                             Source="logout_icon.png"
                             BackgroundColor="{StaticResource BackgroundLight}"
                             CornerRadius="6"
                             WidthRequest="28"
                             HeightRequest="28"
                             Margin="8,0,0,0"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Command="{Binding LogoutCommand}" />
            </Grid>

            <!-- ðŸŒ«ï¸ Ombre lÃ©gÃ¨re (effet de flottant sous le header) -->
            <BoxView Grid.Row="1"
                     HeightRequest="8"
                     Opacity="0.3">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000015" Offset="0.0" />
                        <GradientStop Color="#00000000" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
        </Grid>
    </Border>
</ContentView>
