<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMate.Components.Layout.Navbar"
             BackgroundColor="Transparent"
             HeightRequest="70"
             VerticalOptions="End"
             Margin="0,10,0,10">

    <!-- ðŸ©µ NAVBAR FLOTTANTE -->
    <Border
        BackgroundColor="{StaticResource PrimaryLight}"
        StrokeThickness="0"
        Padding="0"
        HeightRequest="70"
        HorizontalOptions="Fill"
        >

        <!-- ðŸŒ«ï¸ Ombre douce (effet flottant) -->
        <Border.Shadow>
            <Shadow Brush="Black"
                    Offset="0,4"
                    Radius="10"
                    Opacity="0.25" />
        </Border.Shadow>

        <Grid ColumnDefinitions="*,*,*,*,*"
              Padding="25,10"
              ColumnSpacing="25"
              VerticalOptions="Center"
              HorizontalOptions="Fill">

            <!-- ðŸ  Home -->
            <ImageButton Grid.Column="0"
                         Source="home_icon.png"
                         BackgroundColor="Transparent"
                         WidthRequest="28"
                         HeightRequest="28"
                         Command="{Binding GoHomeCommand}">
                <ImageButton.Triggers>
                    <Trigger TargetType="ImageButton" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </ImageButton.Triggers>
            </ImageButton>

            <!-- ðŸ“Š Statistics -->
            <ImageButton Grid.Column="1"
                         Source="analytics_icon.png"
                         BackgroundColor="Transparent"
                         WidthRequest="28"
                         HeightRequest="28"
                         Command="{Binding GoStatisticsCommand}">
                <ImageButton.Triggers>
                    <Trigger TargetType="ImageButton" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </ImageButton.Triggers>
            </ImageButton>

            <!-- âž• Add (icÃ´ne centrale mise en avant) -->
            <Frame Grid.Column="2"
                   CornerRadius="35"
                   WidthRequest="50"
                   HeightRequest="50"
                   BackgroundColor="{StaticResource BackgroundLight}"
                   HasShadow="True"
                   BorderColor="{StaticResource BackgroundLight}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Padding="0">
                <ImageButton Source="add_icon.png"
                             BackgroundColor="Transparent"
                             WidthRequest="28"
                             HeightRequest="28"
                             Command="{Binding GoAddCommand}">
                    <ImageButton.Triggers>
                        <Trigger TargetType="ImageButton" Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ImageButton.Triggers>
                </ImageButton>
            </Frame>

            <!-- ðŸ” Search -->
            <ImageButton Grid.Column="3"
                         Source="search_icon.png"
                         BackgroundColor="Transparent"
                         WidthRequest="28"
                         HeightRequest="28"
                         Command="{Binding GoSearchCommand}">
                <ImageButton.Triggers>
                    <Trigger TargetType="ImageButton" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </ImageButton.Triggers>
            </ImageButton>

            <!-- â˜° Menu -->
            <ImageButton Grid.Column="4"
                         Source="menu_burger_icon.png"
                         BackgroundColor="Transparent"
                         WidthRequest="28"
                         HeightRequest="28"
                         Command="{Binding GoMenuCommand}">
                <ImageButton.Triggers>
                    <Trigger TargetType="ImageButton" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </ImageButton.Triggers>
            </ImageButton>

        </Grid>
    </Border>
</ContentView>
