<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMate.Components.Header"
             BackgroundColor="{StaticResource BackgroundLight}"
             Padding="20,10"
             HeightRequest="70">

    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto"
          VerticalOptions="Center"
          HorizontalOptions="Fill"
          ColumnSpacing="16">

        <!-- ðŸª™ Logo + Texte -->
        <HorizontalStackLayout Grid.Column="0" Spacing="8">
            <Image Source="money_mate_icon.png"
                   WidthRequest="28"
                   HeightRequest="28"
                   VerticalOptions="Center" />
            <Label Text="MoneyMate"
                   FontAttributes="Bold"
                   FontSize="20"
                   TextColor="{StaticResource TextDark}"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- âš™ï¸ Settings -->
        <ImageButton
            Grid.Column="2"
            Source="settings_icon.png"
            BackgroundColor="Transparent"
            WidthRequest="26"
            HeightRequest="26"
            Margin="0,0,8,0"
            VerticalOptions="Center"
            Command="{Binding GoSettingsCommand}" />

        <!-- ðŸ”” Notifications -->
        <ImageButton
            Grid.Column="3"
            Source="alarm_on_icon.png"
            BackgroundColor="Transparent"
            WidthRequest="26"
            HeightRequest="26"
            Margin="0,0,8,0"
            VerticalOptions="Center"
            Command="{Binding GoNotificationsCommand}" />

        <!-- ðŸ‘¤ Profil -->
        <Frame Grid.Column="4"
               WidthRequest="36"
               HeightRequest="36"
               CornerRadius="18"
               BackgroundColor="{StaticResource White}"
               HasShadow="False"
               VerticalOptions="Center"
               HorizontalOptions="End">
            <Image Source="account_icon.png"
                   WidthRequest="20"
                   HeightRequest="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Frame>
    </Grid>
</ContentView>
